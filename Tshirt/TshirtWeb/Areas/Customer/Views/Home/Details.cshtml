@using T_shirt.Data.Repository
@model Product
<form method="post">

   <div class="container backgroundWhite">
      <div class="card">
         <div class="card-header bg-light text-light m-lg-0 row container">
            <div class="col-12 col-md-6">
               <h1 class= "text-primary">@Model.TshirtName</h1>
               <p class= "text-primary">@Model.Color</p>
            </div>
            <div class="col-12 col-md-6 text-md-right pr-4" >
               <span class="badge badge-success pt-2" style="height:30px;color:black;">@Model.Category.Name</span>
            </div>
         </div>
         <div class="card-body">
            <div class="container rounded p-2">
               <div class="row">
                  <div class="col-8 col-lg-8">
                     <div class="row pl-2">
                        <h5 class="text-muted">Size: @Model.Size</h5>
                     </div>
                     <div class="row pl-2">
                        <h5 class="text-muted pb-2">List Price:@Model.ListPrice.ToString("c")</h5>
                     </div>
                     <div class="row pl-2">
                        <p class="text-secondary">@Html.Raw(Model.Description)</p>
                     </div>
                     <div class="row pl-2">
                        <div class="col-2 text-primary">
                           <h4>Count</h4>
                        </div>
 
                     </div>
                  </div>
                  <div class="col-12 col-lg-2 ofset-lg-1 text-center">
                     <img src="@Model.ImageUrl" width="100%" class="rounded"></img>
                  </div>
               </div>
            </div>
         </div>
         <div class="card-footer">
            <div class="row">
               <div class="col-12 col-md-6 pb-1">
                  <a class="btn btn-success form-control btn-square btn-lg" asp-action="Index" >Back To Home</a>
               </div>
               <div class="col-12 col-md-6 pb-1">
               </div>
            </div>
         </div>
      </div>
   </div>
</form>

